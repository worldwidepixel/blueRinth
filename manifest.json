{
  "manifest_version": 3,
  "name": "blueRinth",
  "version": "4.1.1",
  "description": "Change the colour of Modrinth.",
  "icons": {
    "48": "img/icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://modrinth.com/*"],
      "js": ["content.js"],
      "css": [
        "css/banners.css",
        "css/blue.css",
        "css/green.css",
        "css/red.css",
        "css/yellow.css",
        "css/orange.css",
        "css/design.css",
        "css/green.css",
        "css/nineMinecraft.css",
        "css/pastelblue.css",
        "css/pastelgreen.css",
        "css/pastelorange.css",
        "css/pastelred.css",
        "css/pastelpurple.css",
        "css/pastelred.css",
        "css/pastelyellow.css",
        "css/purple.css",
        "css/red.css",
        "css/template.css"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "bluerinth@worldwidepixel.ca",
      "strict_min_version": "110.0"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "css/*.css",
        "img/easter_eggs/*.svg",
        "img/*",
        "injected.js"
      ],
      "matches": ["*://modrinth.com/*"],
      "use_dynamic_url": true
    }
  ]
}
